{

	"compilerOptions": {
		"module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
    "baseUrl": ".",

		"types": [
      "webpack-env"
    ],

    "paths": {
      "@/*": [
        "src/*"
      ]
    },

    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],

  "exclude": [
    "node_modules"
  ]

}
